{
  "manifest_version": 3,
  "name": "DOM Copier",
  "version": "1",
  "description": "Right-click a DOM element, get a menu to copy things at that position.",
  "permissions": [
    "contextMenus",
    "scripting",
    "webNavigation",
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "DOM Copier"
  }
}
